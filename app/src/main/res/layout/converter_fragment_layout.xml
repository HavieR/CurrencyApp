<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/parent_linear_layout">
    <Spinner
        android:id="@+id/spinner_currency_first"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_gravity="center"
        android:id="@+id/inner_linear_layout"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center">
        <TextView
            android:id="@+id/first_currency_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:textSize="20sp"
            android:text="@string/app_name"/>
        <EditText
            android:id="@+id/chosen_currency_et"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:hint="@string/insert_value"
            android:inputType="numberDecimal"
            android:textSize="20sp" />
        <ImageButton
            android:id="@+id/swap_imgbtn"
            android:background="@color/colorPrimaryDark"
            android:src="@mipmap/ic_action_refresh"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="10dp"/>
        <TextView
            android:id="@+id/second_currency_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:textSize="20sp"
            android:text="@string/app_name"/>
        <TextView
            android:id="@+id/result_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:textSize="20sp"
            android:text="@string/app_name"/>
    </LinearLayout>


</LinearLayout>